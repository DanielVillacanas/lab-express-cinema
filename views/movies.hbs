<h1>IRONHACK CINEMA</h1>
<h3>Click on the movie to see details</h3>
<div class="container">
  <div class="row">
    {{#each this}}
      <div class="col-md-4" style="display: flex; flex-direction:column;">
        <img style="width: 200px;" src={{image}} alt="" />
        <p>{{title}}</p>
        <a href="/movie/{{_id}}">See more</a>
      </div>
    {{/each}}
  </div>
</div>